[function correctammo] //Corrige o arco de acordo com a munição
//TAG.OVERRIDE.AMMOTYPE     Que flecha consome
//TAG.OVERRIDE.AMMOANIMHUE  Cor da animação da flecha disparada
//TAG.OVERRIDE.AMMOANIM     Animação da flecha disparada
//more2             Magia/efeito
//morex             Cargas de magia/efeito (não pode diminuir)
//morez             1 se coletável (do corpo). 0 se a flecha some pra sempre quando atirada.
if (<topobj>!=<src.uid>) || ( (<src.weapon.type>!=t_weapon_bow) && (<src.weapon.type>!=t_weapon_xbow) )
 return 1
elif  (<src.weapon.type>==t_weapon_bow) && (<type>!=T_WEAPON_ARROW)
 return 1
elif  (<src.weapon.type>==t_weapon_xbow) && (<type>!=T_WEAPON_BOLT)
 return 1
endif
src.weapon.TAG.OVERRIDE.AMMOTYPE=<baseid>
src.weapon.TAG.OVERRIDE.AMMOANIMHUE=<color>
src.weapon.more2=<more1>
if (<more1>)
 src.weapon.morex=500
else
 src.weapon.morex=0
endif
if (<tag0.anim>)
 src.weapon.TAG.OVERRIDE.AMMOANIM=<tag0.anim>
else
  src.weapon.TAG.OVERRIDE.AMMOANIM
endif
src.weapon.tag.sfx=<tag0.sfx>
src.weapon.tag.colect=<tag0.colect>
src.weapon.morez=<morez>
src.weapon.modAR=<more2>
src.weapon.dmgfire=<morex>
src.weapon.dmgcold=<morey>
src.weapon.dmgpoison=<morez>
src.weapon.dmgenergy=<morem>
src.sysmessageblue Agora usando <name>!

// ------------STRINGs------------

[TYPEDEF t_string]
//hits=hitmin
//maxhits=hitmax
//more2=bitmask

on=@dclick
src.sysmessageyellow Selecione o arco para reparar...
targetf f_use_string <UID>
return 1

[function f_use_string]
OBJ=<argv0>
IF (<argo.type>!=t_weapon_bow) && (<argo.type>!=t_weapon_xbow)
 src.sysmessageyellow Isso nao e um arco.
 return 1
ELIF (<argo.type>==t_weapon_bow) && (<obj.type>!=t_string)
 src.sysmessageyellow Nao pode fazer isso.
 return 1
ELIF (<argo.type>==t_weapon_xbow) && (<obj.baseid>!=i_gears)
 src.sysmessageyellow Nao pode fazer isso.
 return 1
ELIF (<argo.morey>)
 IF (<argo.type>==t_weapon_bow)
    src.sysmessagered Voce removeu o barbante antigo.
 ELSE
    src.sysmessagered Voce removeu a engrenagem antiga.
 ENDIF
 argo.name=<argo.tag.name>
ENDIF

//determinar tipo de arco
if (<argo.baseid>==i_bow)
 LOCAL.arco=<DEF.arco_simples>
ELIF (<argo.baseid>==i_bow_long)
 LOCAL.arco=<DEF.arco_longo>
ELIF (<argo.baseid>==i_bow_composite)
 LOCAL.arco=<DEF.arco_composto>
ELIF (<argo.baseid>==i_bow_elven)
 LOCAL.arco=<DEF.arco_elfico>
ELIF (<argo.baseid>==i_crossbow)
 LOCAL.arco=<DEF.besta_simples>
ELSE
 LOCAL.arco=<DEF.besta_pesada>
ENDIF

IF !(<obj.more2>&<LOCAL.arco>) && (<obj.type>==t_weapon_bow)
 sysmessageyellow Voce nao pode por <obj.name> no <argo.name>
 return 1
endif
IF (<archery> > <bowcraft>)
 LOCAL.skill=<archery>
ELSE
 LOCAL.skill=<bowcraft>
ENDIF
ARGO.morey=<f_rangeValue <obj.more1l>,<obj.more1h>,<LOCAL.skill>>
LOCAL.hits=<eval <argo.maxhits>-<argo.hits>>
LOCAL.hits=<f_rangeValue 0,<LOCAL.hits>,<bowcraft>>
argo.hits=<eval <argo.hits>+{1 <LOCAL.hits>}>
//Bônus para barbante abençoado
IF (<obj.attr>&0401)
 ARGO.morey=<eval (<ARGO.morey>*125)/100>
 obj.name=<obj.name> abencoado
 sfx 0f6
ELSE
 sfx 04f
ENDIF
emoteorange reparando <argo.tag.name>
sysmessageblue <argo.tag.name> reparado com sucesso!
argo.name=<argo.tag.name> (<obj.name>)
obj.decrement
argo.update

