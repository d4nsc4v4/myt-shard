[FUNCTION  f_instalar_armadilha_bau_porta]
  sysmessageyellow Selecione o bau ou porta no qual deseja instalar.
  src.targetf f_instalar_armadilha_bau_porta_

[FUNCTION f_instalar_armadilha_bau_porta_]

obj=<argo>
if (<obj.distance> > 1) && (!<src.IsGM>)
  src.sysmessageyellow Chegue mais perto.
  return 1
elif (<obj.type>==t_ship) || (<obj.type>==t_multi)
  src.sysmessageyellow Nao pode colocar armadilha nisso.
  return 1
elif (<obj.type> == t_door_locked) || (<obj.type> == t_container_locked)
  src.sysmessagegreen So pode instalar uma armadilha em portas ou containers ABERTOS.
return 1
elif (<obj.type> == t_chest_door_trapped)
  src.sysmessagered Ativou a armadilha quando tentou mexer na fechadura
  obj.use
return 1
elif (<obj.type> == t_door) || (<obj.type> == t_container)
  src.emoteyellow Comeca a instalar a armadilha
  src.anim 020
  sfx 1449
  src.face = <obj.uid>
  src.ctag.usando_kit = 1
  src.newitem=i_mry_instala_armadilha_bau_porta
  src.act.more1=<src.tag.trap_escolhida>			// tipo de armadilha (VER DEFNAMES)
  src.act.more2=(<src.removetrap>/100)			// BONUS no tempo para instalar q vai de 0 a 10 dependendo da skill REMOVETRAP
  src.act.morep=<src.p>     					// se o cara se mexer cancela e retorna um novo i_kit_armadilha
  src.act.link=<obj.uid>     					// linka a memory a porta/bau
  src.act.timer=1
  src.act.equip
  src.update
else
  src.sysmessagered Nao e possivel instalar uma armadilha neste objeto.
endif
return 1
endif

