[TYPEDEF t_trap]
//more1 spell
//more2 força (%skill magery)
//morex cargas (morex>04fffffff = infinito, coisa de GM)
//morey dificuldade de desarmar/detectar (%skill detect hidden e disarm trap)
//morez typedef original
//morem tempo de rearme
//link chave
//attr_magic Se for armadilha de chão, ela pode mudar d elugar quando resetada.
//color=026 foi detectada
//tag.color A ultima cor da armadilha.

on=@dclick
type=<morez>
if (<morex>==0)
 src.dclick
 return 1
endif
if (<morez>==1)				//Se a armadilha era um cantainer
 if (<more1>==5)			//Magic Arrow
  src.effect 3 i_fx_smoke_small 0 32 0
  src.sfx 0223
  src.DAMAGESPELL s_Magic_Arrow,dam_magic|dam_pierce,<more2>,<UID>
 elif (<more1>==18)			//Fireball
  src.effect 3 i_fx_explode 0 14 0
  src.sfx 015e
  src.DAMAGESPELL s_Fireball,dam_magic|dam_fire,<more2>,<UID>
 elif (<more1>==20)			//Poison
  src.effect 2 i_trap_gas_3 0 32 0
  src.sfx 022f
  LOCAL.poison=<eval (<more2>/10)>
  src.veneno <LOCAL.poison>
  src.DAMAGESPELL s_Poison,dam_magic|dam_poison,<more2>,<UID>
 elif (<more1>==28)			//Fire Field
  LOCAL.time=<eval <more2>/10>
  src.f_cela_fogo <LOCAL.time>
  more2=0
 elif (<more1>==30)			//Lighting
  src.effect 1 0 0 24 0
  src.sfx 028
  src.DAMAGESPELL s_lightning,dam_magic|dam_energy,<more2>,<UID>
 elif (<more1>==39)			//Poison Field
  LOCAL.time=<eval <more2>/10>
  src.f_cela_veneno <LOCAL.time>
  more2=0
 elif (<more1>==43)			//Explosion
  effect 3 i_fx_explode 0 14 0
  src.DAMAGESPELL s_explosion,dam_magic|dam_fire|dam_physical,<more2>,<UID>
  src.sfx 011b
 elif (<more1>==42)			//Energy Bolt
  src.effect 3 036cb 0 9 0 0b90 0
  src.sfx 0213
  src.DAMAGESPELL s_energy_bolt,dam_magic|dam_energy|dam_physical,<more2>,<UID>
 elif (<more1>==51)			//Flame Bolt
  src.effect 3 i_fire_column 0 16
  src.sfx 011b
 endif

 IF (<more1> < 100)			//Se for armadilha com efeito HC (mágico)
//  src.spelleffect <more1> <more2> <uid>	//aplica efeito hardcoded
 ELSE
  //FUNÇÔES DE ARMADILHAS MECÂNICAS
 ENDIF
elif (<morez>==t_door)			//Se a armadilha era uma porta
 IF (<more1> < 100)			//Se for armadilha com efeito HC (mágico)
//  src.spelleffect <more1> <more2> <uid>	//aplica efeito hardcoded
 ELSE
  //FUNÇÔES DE ARMADILHAS MECÂNICAS
 ENDIF
ENDIF					//Tipo de objeto
if (<morex> != 04fffffff)		//Carga infinita=04fffffff
 morex=<morex>-1			//Se não tiver carga infinita, decrementa 1.
endif
f_resetTrap
return 1

on=@step
return 1
if (<more1> < 100)			//Armadilhas que usam mágica
 type=<morez>
 if (<morex>==0)
  src.remove
  return 1
 endif
