[ITEMDEF i_mry_instala_armadilha]
id=i_memory
NAME=Instalando Armadilha
TYPE=T_eq_script
WEIGHT=0

on=@Create
    ATTR=attr_newbie

on=@TIMER
if !(<cont.p.x> == <morex>) || !(<cont.p.y> == <morey>)
  cont.sysmessagered Voce interrompeu a instalacao.
  remove
  return 1
elif (<more2>==1) && (<more1>==<DEF.EXPLOSAO_BAU_PORTA>)  					 			 // explosao
  link.tag.armadilha=<DEF.EXPLOSAO_BAU_PORTA>
  link.tag.intensidade=(<eval <eval <cont.removetrap>/1000> * <R40,55>> + <R10>) 				 //dano baseado na skill + um fixo pequeno pra quem nao tem skill.
  UID.<cont.ctag.kit>.tag.explosao_bau_porta_amt=(<UID.<cont.ctag.kit>.tag.explosao_bau_porta_amt>-1)  // diminui cargas do kit
  link.say EXPLODE
elif (<more2>==1) && (<more1>==<DEF.VENENO_BAU_PORTA>) 								 // veneno
  link.tag.armadilha=<DEF.VENENO_BAU_PORTA>
  link.tag.intensidade=(<eval <eval <cont.removetrap>/1000> * <R750,1500>>) 					 // joga pra VENENO de 75 a 150 % da skill
  UID.<cont.ctag.kit>.tag.veneno_bau_porta_amt=(<UID.<cont.ctag.kit>.tag.veneno_bau_porta_amt>-1) 	 // diminui cargas do kit
  link.say VENENO
elif (<more2>==1) && (<more1>==<DEF.FLECHA_BAU_PORTA>) 								 // flecha
  link.tag.armadilha=<DEF.FLECHA_BAU_PORTA>
  link.tag.intensidade=(<eval <eval <cont.removetrap>/1000> * <R10,40>> + <R10>) 				 //dano baseado na skill + um fixo pequeno pra quem nao tem skill.
  UID.<cont.ctag.kit>.tag.flecha_bau_porta_amt=(<UID.<cont.ctag.kit>.tag.flecha_bau_porta_amt>-1) 	 // diminui cargas do kit
  link.say FLECHA	
else
  dorand 6
    cont.emoteyellow instalando armadilha
    cont.anim 020
    sfx 1449
  enddo
  timer=1
  more2=<more2>+1
  return 1
endif

link.tag.type_velho = <link.type>
link.tag.quem_armou = <cont.uid>
link.type t_chest_door_trapped
cont.emotegreen Terminou de instalar
cont.Skill_Gain Skill_Removetrap
UID.<cont.ctag.kit>.update
link.update
remove
return 1



