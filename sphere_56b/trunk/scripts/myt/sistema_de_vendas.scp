SERV.NEWITEM i_bag
NEW.cont=<REF1>
NEW.name=<OBJ.name>
OBJ.cont=<NEW>
OBJ.removefromview

//insert item into DB
DB.EXECUTE "INSERT INTO vendorItems SET timestamp=NOW(),idVendor=<eval <uid>>,idPlayer=<eval <SRC>>,idItem=<eval <OBJ>>,quantity=<eval <OBJ.amount>>,price=(<eval <argv[1]>>/<eval <OBJ.amount>>),playerName='<DB.ESCAPEDATA <SRC.TAG.name>>',itemType=<eval <TAG.vendor_type>>,defName='<OBJ.baseid>',itemName='<DB.ESCAPEDATA <OBJ.name>>';"

DB.QUERY "SELECT id FROM vendorItems WHERE idItem=<eval <OBJ>>"
