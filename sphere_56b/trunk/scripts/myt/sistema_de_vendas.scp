[FUNCTION mudarpreco]
if !(<src.had_merchant_priv>)
 sysmessagered Voce nao tem privilegio para isso.
 return 0
endif
if (!<argo>)
 sysmessageyellow Selecione o item para modificar o preco:
 targetf mudarpreco
 return 0
endif
if !(<argo.isitem>)
 sysmessageyellow <argo.name> nao eh um item valido.
 return 0
endif
if <DB.CONNECTED>
 ctag.item.exists=0
 DB.QUERY ="SELECT value FROM merchant_values WHERE itemdef='<argo.baseid>' AND region='<region.defname>';"
 if (<DB.ROW.NUMROWS> == 1)
  sysmessageyellow O valor de uma unidade de <argo.name> da mais alta qualidade eh <STRTRESURE <DB.ROW.0.value>>.
  ctag.item.exists=1
 endif
 ctag.targ=<argo>
 sysmessagegreen Quanto voce acha que uma unidade de <argo.name> em perfeita qualidade deveria custar em cobres?
 promptconsole merchant_set_value
else
 sysmessagered Impossivel alterar o preco.
endif
return 0

[FUNCTION merchant_set_value]
if (<argn> < 1) && (<strpos 0 . <argv0>> > 0)
 sysmessagered Valor invalido.
 return 0
endif
obj=<ctag.targ>
if (<f_IsWeapon <obj>>)
 local.c=1
elif (<f_isArmor <obj>>)
 local.c=2
elif (<f_isRegsOrMagic <obj>>)
 local.c=3
elif (<f_isFood <obj>>)
 local.c=4
elif (<f_isMisc <obj>>)
 local.c=5
elif (<f_isWearable <obj>>)
 local.c=6
elif (<f_isRaw <obj>>)
 local.c=7
else
 sysmessagered Este item nao tem classificacao!
 return 0
endif

if (<DB.CONNECTED>)
 if <ctag0.item.exists>
  DB.EXECUTE "UPDATE merchant_values SET category=<dlocal.c>, itemname='<obj.idname>', value=<args> WHERE itemdef='<obj.baseid>' AND region='<region.defname>';"
  sysmessagegreen Preco do item alterado com sucesso!
 else
  DB.EXECUTE "INSERT INTO merchant_values (itemdef,category,itemname,value,region) VALUES('<obj.baseid>',<dlocal.c>,'<obj.idname>',<args>,'<region.defname>');"
  sysmessagegreen Preco do item adicionado com sucesso!
 endif
else
 sysmessagered Impossivel alterar o preco.
endif

[FUNCTION merchant_get_value]
REF1=<argn>
if !<REF1>
    return -1
endif

if <DB.CONNECTED>
    DB.QUERY ="SELECT value FROM merchant_values WHERE itemdef='<REF1.baseid>' AND region='<region.defname>' LIMIT 1"
    if <DB.ROW.NUMROWS> == 1
        return  <DB.ROW.0.value>
    else
        return 0
    endif
endif
return 0


[FUNCTION verpreco]
if (!<argo>)
 sysmessageyellow Selecione o item para ver o preco:
 targetf verpreco
 return 0
endif
local.value=<merchant_get_value <argo.uid>>
if (<local.value> < 0) && (<strpos 0 . <local.value>> > 0)
 sysmessagered Impossivel ver o preco.
elif (<local.value> == 0)
 sysmessageyellow Item sem preco determinado.
else
 if (<strpos 0 . <local.value>> > 0) //formatDecimal dependendo desta expressao nao aplicavel em QVAL
  sysmessagegreen O valor de uma unidade de <argo.name> da mais alta qualidade eh <formatDecimal <local.value>>mc
 else
  sysmessagegreen O valor de uma unidade de <argo.name> da mais alta qualidade eh <STRTRESURE <local.value>>.
endif
return 0

[FUNCTION had_merchant_priv]
if (<IsGM>) || (<TOWN_CHECK_PRIVS>==2)
 return 1
endif
return 0

