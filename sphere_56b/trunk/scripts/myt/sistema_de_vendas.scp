OBJ=<splitStack <OBJ>,<LOCAL.amount>>

//create player vendorbox if doesnt exist
REF1=<src.findlayer.layer_vendor_extra.uid>
if (!<REF1>)
    SERV.NEWITEM i_bankbox
    NEW.layer=layer_vendor_extra
    NEW.cont=<SRC>
