[FUNCTION craft_setTool]
//Seta <args> como DEFNAME da ferramenta que será gasta.
if (<IsGm>)
 ctag.craft_tool=
elif (<findlayer.layer_hand1.defname>==<args>)
 ctag.craft_tool=<findlayer.layer_hand1.uid>
elif (<restest 1 <args>>)
 ctag.craft_tool=<findid.<args>>
