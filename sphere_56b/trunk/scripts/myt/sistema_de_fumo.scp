////////////////////////////////////////////////////////////////////

[function solta_fumaca]
if (<cont.dir> == 0)
  cont.act.move 0 -1 0
return 1
elif (<cont.dir> == 1)
  cont.act.move 1 -1 0
return 1
elif (<cont.dir> == 2)
  cont.act.move 1 0 0
return 1
elif (<cont.dir> == 3)
  cont.act.move 1 1 0
return 1
elif (<cont.dir> == 4)
  cont.act.move 0 1 0
return 1
elif (<cont.dir> == 5)
  cont.act.move -1 1 0
return 1
elif (<cont.dir> == 6)
  cont.act.move -1 0 0
return 1
elif (<cont.dir> == 7)
  cont.act.move -1 -1 0
return 1
endif


