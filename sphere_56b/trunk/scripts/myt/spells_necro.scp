elif (<LOCAL.DIF>==8)
 f_summon_creature c_grim_reaper,32
 f_summon_creature c_skeleton_w_axe,37
elif (<LOCAL.DIF>==9)
 f_summon_creature c_grim_reaper,25
 f_summon_creature c_zumbi_superior,29
