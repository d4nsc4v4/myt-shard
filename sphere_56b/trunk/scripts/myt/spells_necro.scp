 LOCAL.DIF=<EVAL <argv0>/100>
else
 LOCAL.DIF=<EVAL <magery>/100>
ENDIF
IF (<LOCAL.DIF> > 10)
 LOCAL.DIF=10
endif
LOCAL.DIF1=<eval {1 <LOCAL.DIF>}>
