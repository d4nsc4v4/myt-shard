//*****************************************************************************
// e_icemade
//*****************************************************************************
[EVENTS e_icemade]
on=@hit
if ({0 3}==1)
 src.temp_effect 2
elif ({0 5}==1)
 src.temp_effect 3
endif
return 0

on=@GetHitCustom
if (<argn2>&dam_cold_old)
 dorand 3
  say=@021  *parece imune*
  say=@021  *intacto*
 enddo
 hits=<hits>+<argn1>
 return 1
endif
if (<argn2>&dam_fire)
 argn1=<argn1>*10/7
endif
return 0

ON=@EnvironChange
if (<temp_get> > 0)
 serv.newitem i_neve
 new.p=<p>
 new.timer={8 12}
 new.emotered derreteu
 remove
 return 1
endif
return 0

on=@death
serv.newitem i_neve
new.p=<p>
new.emotered desfez
remove
return 1

