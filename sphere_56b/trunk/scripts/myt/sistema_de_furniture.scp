  src.ctag.furn = <UID>
  src.menu m_addfurn
 endif
elif (<type>==t_chair) || (<type>==t_table) || (<type>==t_normal)
 if (<tag0.dono>==<src.uid>)
  serv.newitem i_mry_furniture
  new.cont=<src.uid>
  new.link=<uid>
