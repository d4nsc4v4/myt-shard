[FUNCTION confirme]
src.form_cacheAccountInfo

if (STRMATCH(waiting,<src.ctag.form_status>))        
    if <tag0.actkey>==<args>
        sysmessageyellow Email ativado com sucesso!
        IF (<IsNum <src.account>>)
            DB.EXECUTE=UPDATE accounts SET status='form' WHERE username='<DB.ESCAPEDATA <eval <src.account>>>'
        ELSE
            DB.EXECUTE=UPDATE accounts SET status='form' WHERE username='<DB.ESCAPEDATA <account>>'
        ENDIF
        tag.actkey=
        form_checkAccStatus
    else
        sysmessageyellow Chave invalida!
    endif
